{
    "version": 2,
    "builds": [
        {
            "src": "my-app/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/my-app/index.html"
        }
    ]
}