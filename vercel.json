{
    "version": 2,
    "builds": [
        {
            "src": "/my-app/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/$1"
        },
        {
            "src": "/static/(.*)",
            "dest": "/my-app/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/my-app/index.html"
        }
    ]
}